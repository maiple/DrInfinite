/// draw_block(x, y, type)
// draws a block at the given coordinates

var _x = argument0;
var _y = argument1;
var btype = argument2;

var colour = btype % global.block_colours_c;

var spr = sprBlock;

if (btype & K_BLOCK_VIRUS)
{
    spr = sprVirus;
}

switch (colour)
{
case 0: exit;
case 1:
case 2:
case 3:
    draw_sprite_ext(spr, 0, _x, _y, 1, 1, 0, global.block_colours[colour], 1);
}
