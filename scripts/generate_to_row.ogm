/// generate_to_row(row)

ogm_assert(object_index == objControl, "generate_to must be called from objControl")

var _from = m_generated_to;
var _to = argument0;

if (_to <= _from) exit;

for (var i = _from; i < _to; ++i)
{
    for (var j = 0; j < objGroup.m_width; ++j)
    {
        var b = 0;

        // TODO: ensure enough viruses.
        if (random(1) > 0.90)
        {
            b = irandom(global.block_colours_c - 2) + 1;
            b |= K_BLOCK_VIRUS;
        }
        with (objGroup)
        {
            if (m_enable_bottom && i >= m_bottom)
            {
                continue;
            }

            m_grid[i - m_top, j] = b;
            if (b != 0)
            {
                m_virus_count++;
            }
        }
    }
}

m_generated_to = _to;
