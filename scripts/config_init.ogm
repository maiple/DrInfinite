#define fix_array

var arr = argument0;
var arr2 = 0;

if (array_height_2d(arr) == 1)
{
    for (var i = 0; i < array_length_1d(arr); ++i)
    {
        if (is_array(arr[@ i]))
        {
            var arri = arr[@ i]
            for (var j = 0; j < array_length_1d(arri); ++j)
            {
                arr2[i, j] = arri[@ j];
            }
        }
        else
        {
            arr2[i, 0] = arr[@ i];
        }
    }
}
else
{
    return arr2;
}

return arr2;
